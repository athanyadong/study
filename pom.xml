<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

        <groupId>io.athan</groupId>
        <artifactId>athan-parent</artifactId>
        <version>1.0.0</version>
    <description>parent配置</description>
    <packaging>pom</packaging>
    <modules>
        <module>athan-service</module>
        <module>athan-base</module>
        <module>athan-clouds</module>
    </modules>



    <properties>
        <athan.version>1.0.0</athan.version>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <!--boot版本-->
        <spring-boot.version>2.2.5.RELEASE</spring-boot.version>
        <!--lombok版本-->
        <lombok.version>1.18.10</lombok.version>
        <!--mysql版本-->
        <mysql.version>5.1.46</mysql.version>
        <!--cloud版本-->
        <spring-cloud.version>Hoxton.SR6</spring-cloud.version>
        <!--admin版本-->
        <spring-boot-admin.version>2.2.2</spring-boot-admin.version>
        <!--flowable版本-->
        <flowable.version>6.7.2</flowable.version>
        <!--mybatis-plus版本 -->
        <mybatis-plus.version>3.4.3</mybatis-plus.version>
        <!--fastjson版本-->
        <fastjson.version>1.2.83</fastjson.version>
        <!--commons-httpclient版本-->
        <commons-httpclient.version>3.1</commons-httpclient.version>
        <!--commons-configuration版本-->
        <commons-configuration.version>1.10</commons-configuration.version>
        <!--redisson版本-->
        <redisson.version>3.15.5</redisson.version>
        <!--UserAgentUtils版本-->
        <UserAgentUtils.version>1.21</UserAgentUtils.version>
        <!--jsoup版本-->
        <jsoup.version>1.12.1</jsoup.version>
        <!--commons-collections版本-->
        <commons-collections.version>3.2.1</commons-collections.version>
        <!--hutool-all版本-->
        <hutool-all.version>5.3.2</hutool-all.version>
        <!--commons-lang版本-->
        <commons-lang.version>2.6</commons-lang.version>
        <!--commons-beanutils版本-->
        <commons-beanutils.version>1.9.3</commons-beanutils.version>
        <!--commons-io版本-->
        <commons-io.version>2.7</commons-io.version>
        <!--commons-logging版本-->
        <commons-logging.version>1.1.1</commons-logging.version>
        <!--commons-fileupload版本-->
        <commons-fileupload.version>1.3.3</commons-fileupload.version>
        <!--joda-time版本-->
        <joda-time.version>2.10</joda-time.version>
        <!--micrometer-jvm-extras版本-->
        <micrometer-jvm-extras.version>0.2.0</micrometer-jvm-extras.version>
        <!--jasypt版本-->
        <jasypt.version>2.1.0</jasypt.version>
        <!--apollo-client版本-->
        <apollo-client.version>1.6.0</apollo-client.version>
        <!--fastdfs-client版本-->
        <fastdfs-client.version>1.26.2</fastdfs-client.version>
        <!--aliyun-sdk-oss版本-->
        <aliyun-sdk-oss.version>3.8.0</aliyun-sdk-oss.version>
        <!--alipay-sdk-java版本-->
        <alipay-sdk-java.version>4.22.34.ALL</alipay-sdk-java.version>
        <!--shiro版本-->
        <shiro.version>1.4.0</shiro.version>
        <!--druid版本-->
        <druid.version>1.1.17</druid.version>
        <!--kaptcha版本-->
        <kaptcha.version>0.0.9</kaptcha.version>
        <!--guava版本-->
        <guava.version>19.0</guava.version>
        <!--jjwt版本-->
        <jjwt.version>0.7.0</jjwt.version>
        <!--knife4j版本-->
        <knife4j.version>2.0.9</knife4j.version>
        <!--weixin-java-mp版本-->
        <weixin-java-mp.version>4.2.0</weixin-java-mp.version>
        <!--commons-codec版本-->
        <commons-codec.version>1.15</commons-codec.version>
        <!--ynamic-tp-->
        <dynamic-tp.version>1.0.7</dynamic-tp.version>
        <!--oracle驱动依赖-->
        <oracle.version>11.2.0.3</oracle.version>
        <!--freemarker模板引擎依赖-->
        <freemarker.version>2.3.31</freemarker.version>
        <!--transmittable-thread-local版本-->
        <transmittable-thread-local.version>2.12.2</transmittable-thread-local.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <!-- 定义 spring boot 版本 -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-parent</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- 定义 spring boot admin 版本 -->
            <dependency>
                <groupId>de.codecentric</groupId>
                <artifactId>spring-boot-admin-dependencies</artifactId>
                <version>${spring-boot-admin.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- 定义 spring cloud 版本 -->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- 定义 lombok 版本 -->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
            </dependency>
            <!-- 定义 mysql 版本 -->
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.version}</version>
            </dependency>
            <!-- 定义 flowable 版本 -->
            <dependency>
                <groupId>org.flowable</groupId>
                <artifactId>flowable-spring-boot-starter-process</artifactId>
                <version>${flowable.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>


    <profiles>
        <!--开发环境-->
        <profile>
            <id>dev</id>
            <properties>
                <profile.active>dev</profile.active>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <!--测试环境-->
        <profile>
            <id>test</id>
            <properties>
                <profile.active>test</profile.active>
            </properties>
        </profile>
        <!--正式环境-->
        <profile>
            <id>prod</id>
            <properties>
                <profile.active>prod</profile.active>
            </properties>
        </profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
        <!-- profile对资源的操作 -->
        <resources>
            <!--打包的时候先去掉所有的配置文件-->
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>application*.yml</exclude>
                </excludes>
            </resource>
            <!--添加需要包含的文件-->
            <resource>
                <directory>src/main/resources</directory>
                <!-- 是否替换yml或者properties里@xx@表示的maven properties属性值 -->
                <filtering>true</filtering>
                <!--在打包的时候，根据-P参数，加上需要的yml配置文件-->
                <includes>
                    <include>application.yml</include>
                    <include>application-${profile.active}.yml</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
